<div class="col-md-4 mx-auto">

    <div class="card">
        <div class="card-body">
            <form action="/articles/edit/{{articles.idArticulo}}" method="POST">
                <div class="form-group">
                    <input type="text" name="titulo" class="form-control" placeholder="Titulo" value="{{articles.titulo}}" autofocus>
                </div>
                <div class="form-group">
                    <textarea name="articuloEscrito" rows="4" class="form-control" placeholder="Articulo">{{articles.articuloEscrito}}</textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-success btn-block">
                        Editar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>